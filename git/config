[alias]
	br = branch
	ci = commit
	co = checkout
	st = status
	hl = log --date=short --graph --pretty='tformat:%C(auto)%d%h: %an %ad% s'
	# revert = checkout --
	unstage = reset HEAD

# Automatic `git config branch.BRANCHNAME.rebase true` on new branches/repos
# Changes default `git pull` to `git pull --rebase`
[branch]
	 autosetuprebase = always

