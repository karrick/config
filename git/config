[alias]
    br = branch
    ci = commit
    co = checkout
    glog = log --graph --oneline --decorate
    hl = log --date=short --graph --pretty='tformat:%C(auto)%d%h: %an %ad% s'
    st = status

# Automatic `git config branch.BRANCHNAME.rebase true` on new branches/repos
# Changes default `git pull` to `git pull --rebase`
[branch]
    autosetuprebase = always

[color]
    branch = auto
    diff = auto
    status = auto
    ui = auto

[core]
    pager = less -FRSX
    editor = emacsclient -a ''

[credential]
    helper = store

[diff]
    submodule = log

[fetch]
    prune = true

[init]
    defaultBranch = main

[log]
	date = local

[pull]
    rebase = true

[push]
    autosetupremote = true
    default = simple
    # followTags = true

[rebase]
    autoStash = true

[rerere]
    enabled = true

